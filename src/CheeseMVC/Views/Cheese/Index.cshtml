@model List<CheeseMVC.Models.Cheese>

<h1>List of Cheeses</h1>

@if (Model.Count == 0)
{
    <p>No Cheeses Yet</p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Category</td>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
        </tr>
    }
</table>


<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a>

    <a asp-controller="Cheese" asp-action="Remove">Remove Cheese</a></p>